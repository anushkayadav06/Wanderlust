<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" class="form-control" type="text" placeholder="Enter username" required>
                <div class="valid-feedback">looks good !</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" class="form-control" type="email" placeholder="Enter you email" required>
                <div class="valid-feedback">looks good !</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" class="form-control" type="password" placeholder="Enter you password" required>
                <div class="valid-feedback">looks good !</div>
            </div>

            <button class="btn btn-dark add-btn">SignUp</button>

        </form>
    </div>
</div>